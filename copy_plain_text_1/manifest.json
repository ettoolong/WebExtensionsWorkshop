{
  "description": "Copies text without formatting.",
  "manifest_version": 2,
  "name": "Copy Plain Text",
  "version": "1.0.0",

  "icons": {
    "48": "icon/icon.svg"
  },

  "author": "Ett Chung",

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],

  "permissions": [
    "<all_urls>",
    "contextMenus",
    "clipboardWrite"
  ]
}
